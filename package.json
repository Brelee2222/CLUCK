{
    "name": "cluck2",
    "type": "module",
    "scripts": {
        "dev": "npm-run-all -c --parallel watch:**",
        "dev:frontend": "npm-run-all -c --parallel serve build:css watch:frontend",
        "watch:ts": "tsx watch src/index.ts --tsconfig ./tsconfig.json",
        "watch:css": "tailwindcss -i ./src/app.css -o static/app.css --watch",
        "watch:frontend": "tsx esbuild.config.ts --watch",
        "build:db": "prisma migrate dev",
        "build:css": "tailwindcss -i ./src/app.css -o static/app.css --minify",
        "build:frontend": "tsx esbuild.config.ts",
        "serve": "tsx src/index.ts",
        "build": "echo 'come back later'",
        "lint:style": "prettier --check .",
        "lint:code": "eslint . -c eslint.config.js",
        "lint": "npm-run-all -l -c --parallel lint:**",
        "format": "prettier --write ."
    },
    "dependencies": {
        "@hono/node-server": "^1.12.0",
        "@prisma/client": "^5.16.2",
        "@slack/bolt": "^3.19.0",
        "@slack/web-api": "^6.11.2",
        "async-lock": "^1.4.1",
        "config": "^3.3.12",
        "core-js-pure": "^3.37.1",
        "hono": "^4.4.12",
        "pino": "^9.2.0",
        "pino-pretty": "^11.2.1",
        "reflect-metadata": "^0.2.2",
        "socket.io": "^4.7.5",
        "socket.io-client": "^4.7.5",
        "ws": "^8.18.0"
    },
    "devDependencies": {
        "@chialab/esbuild-plugin-html": "^0.18.2",
        "@eslint/js": "^9.6.0",
        "@faker-js/faker": "^8.4.1",
        "@types/async-lock": "^1.4.2",
        "@types/config": "^3.3.4",
        "@types/core-js": "^2.5.8",
        "@types/eslint__js": "^8.42.3",
        "@types/node": "^20.14.10",
        "@types/validator": "^13.12.0",
        "@types/ws": "^8.5.10",
        "autoprefixer": "^10.4.19",
        "core-js": "^3.37.1",
        "esbuild": "^0.21.5",
        "esbuild-sass-plugin": "^3.3.1",
        "eslint": "^9.6.0",
        "eslint-formatter-markdown": "^1.0.4",
        "htmlnano": "^2.1.1",
        "npm-run-all": "^4.1.5",
        "pre-commit": "^1.2.2",
        "prettier": "^3.3.2",
        "prisma": "^5.16.2",
        "tailwindcss": "^3.4.4",
        "tsx": "^4.16.2",
        "typescript": "^5.5.3",
        "typescript-eslint": "^8.0.0-alpha.41",
        "vite-tsconfig-paths": "^4.3.2",
        "vitest": "^2.0.1"
    },
    "engines": {
        "node": ">=21.0.0"
    },
    "pre-commit": [
        "lint:code",
        "format"
    ]
}
